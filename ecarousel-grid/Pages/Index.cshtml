@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<head>
    <title>My eCard-Grid</title>
    
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>


<body>
    <h1>SEND A DIGITAL GREETING CARD TO A FRIEND</h1>
    <div class="container">
        <div class="row">
            @*<div class="col-xs-12 col-lg-4 text-center">*@
            <div class="col-xs-12 col-lg-4 text-center">
                    <!-- CAROUSEL -->
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                            <li data-target="#myCarousel" data-slide-to="3"></li>
                            <li data-target="#myCarousel" data-slide-to="4"></li>
                            <li data-target="#myCarousel" data-slide-to="5"></li>
                            <li data-target="#myCarousel" data-slide-to="6"></li>
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <img src="~/images/card_anniversary.png" alt="Happy Anniversary" class="img-responsive center-block" />
                            </div>

                            <div class="item">
                                <img src="~/images/card_babyshower.png" alt="Baby Shower" class="img-responsive center-block" />
                            </div>

                            <div class="item">
                                <img src="~/images/card_birthday.png" alt="Happy Birthday" class="img-responsive center-block" />
                            </div>

                            <div class="item">
                                <img src="~/images/card_valentines.png" alt="Happy Valentines" class="img-responsive center-block" />
                            </div>

                            <div class="item">
                                <img src="~/images/card_frame_black.png" alt="Black Frame" class="img-responsive center-block" />
                            </div>

                            <div class="item">
                                <img src="~/images/card_frame_gold.png" alt="Gold Frame" class="img-responsive center-block" />
                            </div>

                            <div class="item">
                                <img src="~/images/card_frame_wood.png" alt="Wood Frame" class="img-responsive center-block" />
                            </div>
                        </div>

                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                </div>

                <div class="col-xs-12 col-lg-8">
                    <!-- GRID -->
                    <div class="grid">
                        <div class="row">
                            <div class="col-lg-2">
                                <img src="~/images/card_valentines.png" class="img-responsive center-block" />
                            </div>
                            <div class="col-lg-2">
                                <img src="~/images/card_anniversary.png" class="img-responsive center-block" />
                            </div>
                            <div class="col-lg-2">
                                <img src="~/images/card_babyshower.png" class="img-responsive center-block" />
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-lg-2">
                                <img src="~/images/card_birthday.png" class="img-responsive center-block" />
                            </div>
                            <div class="col-lg-2">
                                <img src="~/images/card_frame_wood.png" class="img-responsive center-block" />
                            </div>
                            <div class="col-lg-2">
                                <img src="~/images/card_frame_black.png" class="img-responsive center-block" />
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-lg-2">
                                <img src="~/images/card_frame_gold.png" class="img-responsive center-block" />
                            </div>
                        </div>
                    </div>

                </div>
            </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

</body>
